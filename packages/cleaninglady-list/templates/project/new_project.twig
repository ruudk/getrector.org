{% extends 'base.twig' %}

{% block main %}
    <div id="cleaning_lady_list">
        <h1>{{ page_title }}</h1>

        <div class="row">
            <div class="col-6">
                {{ form_start(project_form) }}
                    <div class="row">
                        <div class="col-12 form-group">
                            {{ form_row(project_form.name) }}
                        </div>

                        <div class="col-6 form-group">
                            {{ form_row(project_form.currentPhpVersion) }}
                        </div>

                        <div class="col-6 form-group">
                            {{ form_row(project_form.targetPhpVersion) }}
                        </div>

                        <div class="col-6 form-group">
                            {{ form_row(project_form.currentFramework) }}
                        </div>

                        <div class="col-6 form-group">
                            {{ form_row(project_form.targetFramework) }}
                        </div>

                    </div>
                {{ form_end(project_form) }}
            </div>
            <div class="col-6">
                <p>
                    Want to migrate a PHP project, but don't know where to begin?
                    The Cleaning Lady List give you a sharable checklist of steps to achieve a clean, high
                    quality and maintainable migration.
                </p>
                <p>
                    Create a project to start.
                </p>
            </div>
        </div>
    </div>
{% endblock %}
